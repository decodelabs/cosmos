{
    "name": "decodelabs/cosmos",
    "description": "Internationalisation made simple",
    "type": "library",
    "keywords": [ ],
    "license": "MIT",
    "authors": [ {
            "name": "Tom Wright",
            "email": "tom@inflatablecookie.com"
        } ],
    "require": {
        "php": "^8.4",
        "ext-intl": "*",

        "decodelabs/exceptional": "^0.5",
        "decodelabs/glitch-support": "^0.5",
        "decodelabs/veneer": "^0.12.1",
        "nesbot/carbon": "^2|^3"
    },
    "require-dev": {
        "decodelabs/phpstan-decodelabs": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Cosmos\\": "src/"
        },
        "files": [
            "src/Context.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "DecodeLabs\\Cosmos\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.2.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
